{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "quotes": ["error", "single"],
      "linebreak-style": "off",
      "comma-dangle": ["error", "never"],
      "import/first": "off",
      "import/extensions": "off",
      "import/no-unresolved": "off",
      "class-methods-use-this": "off",
      "import/no-extraneous-dependencies": "off",
      "consistent-return": "off",
      "camelcase": "off"
    }
}
